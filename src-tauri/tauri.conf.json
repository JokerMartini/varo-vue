{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "varo",
  "version": "0.1.0",
  "identifier": "com.varo.app",
  "build": {
    "beforeDevCommand": "pnpm dev",
    "devUrl": "http://localhost:3000",
    "beforeBuildCommand": "pnpm generate",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "Varo",
        "width": 460,
        "height": 720,
        "resizable": true,
        "fullscreen": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
